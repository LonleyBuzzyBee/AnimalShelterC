@{
  Layout = "_Layout";
}
 
@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;

<h1>Animals</h1>
@if (Model.Count == 0)
{
  <p>Nothing here bro.</p>
}
<ul>
  @foreach (Animal animal in Model)
  {
  <li>@Html.ActionLink($"{animal.Name}","Details", new { id = animal.AnimalId})</li>
 
  }
</ul>
<p>@Html.ActionLink("Add new animal","Create")</p>
